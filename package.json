{
  "name": "sapper-ts",
  "description": "sapper, typescrypt, eslint, stylelint, prettier, scss, postcss autoprefixer",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "validate": "svelte-check",
    "lint:js": "eslint --ext .ts,.json,.svelte src/",
    "lint:style": "stylelint src/**/*.{css,scss,svelte}",
    "lint:js:fix": "eslint --fix --ext .ts,.json,.svelte src/",
    "lint:style:fix": "stylelint src/**/*.{css,scss,svelte} --fix",
    "format": "prettier --plugin=./node_modules/prettier-plugin-svelte --check .",
    "format-fix": "prettier --plugin=./node_modules/prettier-plugin-svelte --write .",
    "postinstall": "patch-package"
  },
  "lint-staged": {
    "src/**/*.{ts,json,svelte}": [
      "prettier --plugin=./node_modules/prettier-plugin-svelte --write",
      "npm run lint:style"
    ],
    "src/**/*.svelte": [
      "svelte-check"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "sirv": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@tsconfig/svelte": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "autoprefixer": "^9.8.6",
    "eslint": "^7.2.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-plugin-svelte3-preprocess": "^2.7.3-preprocess",
    "eslint-svelte3-preprocess": "0.0.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.2",
    "postcss": "^7.0.32",
    "postcss-load-config": "^2.1.0",
    "prettier": "^2.1.1",
    "prettier-plugin-svelte": "^1.2.1",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sapper": "^0.28.0",
    "sass": "^1.26.10",
    "stylelint": "^13.7.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "svelte": "^3.17.3",
    "svelte-check": "^1.0.36",
    "svelte-preprocess": "^4.2.1",
    "typescript": "^4.0.2"
  },
  "browserslist": "last 2 versions"
}
